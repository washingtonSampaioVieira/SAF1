<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_contato_padrao"
        android:id="@+id/img_contato"
        android:layout_marginRight="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_nome_contato"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:text="Washington sampaio vieira"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:padding="0dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tel_contato"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="4141-58985"
                android:maxLines="1"
                android:layout_marginLeft="5dp"
                android:id="@+id/txt_telefone_contato"
                android:ellipsize="end"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="WashingtonSapais@gmail.com"
                android:layout_marginLeft="5dp"
                android:id="@+id/txt_email_contato"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
